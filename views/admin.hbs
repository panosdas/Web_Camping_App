                    <th id="editReservation"><button>επεξεργασία</button></th>
                </tr>
            </table>
            <button data-show="false">προσθήκη κράτησης</button>
            <form class="admin-form" id="addReservation" method="POST" onsubmit="return checkDate()" action="/admin/addReservation" >
                    <fieldset>
                        <legend>προσθήκη Κράτησης</legend>
                        <label for="email">email Πελάτη</label>
                        <input name="email"type="text" id="email" pattern="[A-Za-z0-9]+@[A-Za-z0-9]+\.[A-Za-z0-9]+" required>
                        <label for="zoneType">τύπος χώρου</label>
                        <select name="zoneType" id="zoneType"></select>
                        <label for="zoneNum">αριθμός χώρων</label>
                        <input name="zoneNum" id="zoneNum" type="number" value="1" required>
                        <label for="people">αριθμός ατόμων</label>
                        <input name="people" id="zoneNum" type="number" value="1" required>
                        <label for="checkIn">check-in</label>
                        <input name="checkIn" type="date" id="checkIn" required>
                        <label for="checkOut">check-out</label>
                        <input name="checkOut" type="date" id="checkOut" required>
                        <input type="submit" value="προσθήκη">
                    </fieldset>
                </form>
        </div>
