        <div id="zoneManagement" class="management-item">
            <h3>Διαχείριση Χώρων</h3>
            <div>
                <table id="zoneList" class="table-list">
                </table>
                <button id="addZoneToggle">προσθήκη χώρου</button>
                <form class="admin-form" id="addZone" method="POST" action="/admin/addZone" >
                    <fieldset>
                        <legend>προσθήκη χώρου</legend>
                        <label for="zoneName">Όνομα Χώρου</label>
                        <input name="name"type="text" id="zoneName" required>
                        <label for="defaultPeople">Προκαθορισμένος αριθμός ατόμων</label>
                        <input name="defaultPeople" type="number" id="defaultPeople" required>
                        <label for="maxPeople">Μέγιστος αριθμός ατόμων</label>
                        <input name="maxPeople" type="number" id="maxPeople" required>
                        <label for="additionalChargePerPerson">Έξτρα χρέσωση ανά άτομο</label>
                        <input name="additionalChargePerPerson" type="text" id="additionalChargePerPerson" required>
                        <label for="highSeasonPrice">Τιμή υψηλής περιόδου</label>
                        <input name="highSeasonPrice" type="text" id="highSeasonPrice" required>
                        <label for="lowSeasonPrice">Τιμή χαμηλής περιόδου</label>
                        <input name="lowSeasonPrice" type="text" id="lowSeasonPrice" required>
                        <label for="numOfZones">Συνολικός αριθμός χώρων</label>
                        <input name="numOfZones"type="number" id="numOfZones" required>
                        <input type="submit" value="προσθήκη">
                    </fieldset>
                </form>
            </div>
        </div>
        <div id="visitors" class="management-item">
                <h3>Επισκέπτες</h3>
                <div id="visitorSearch">
                    <label for="visitorSearchIn">Αναζήτηση Επισκέπτη:</label>
                    <input type="text" id="visitorSearchIn">
                    <button>Αναζήτηση</button>
                </div>
                <table id="visitorList" class="table-list"></table>
                <button data-show="false"> προσθήκη Επισκέπτη </button>
                <form class="admin-form" id="addVisitor" method="POST" action="/admin/addVisitor" >
                    <fieldset>
                        <legend>προσθήκη Επισκέπτη</legend>
                        <label for="firstName">Όνομα</label>
                        <input name="firstName"type="text" id="firstName">
                        <label for="lastName">Επίθετο</label>
                        <input name="lastName" type="text" id="lastName">
                        <label for="email">email</label>
